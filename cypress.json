{
  "watchForFileChanges": false,
  "viewportWidth": 1920,
  "viewportHeight": 1080,
  "reporter": "mochawesome",
  "trashAssetsBeforeRuns": true,
  "videoCompression": false,

  "env": {
    "cypress-movie": {
      "enabled": true,
      "cursorTracking": {
        "enabled": false,
        "shape": "arrow" 
      },
      "width": 1920,
      "height": 640
    }
  },
  
  "reporterOptions": {
    "overwrite": false,
    "charts": true,
    "reportFilename": "[status]_[datetime]-[name]-report"
  }
}
